{% extends 'app.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Résultats de recherche</h1>
            <ul>
                {% if usersList != null %}
                    {% for user in usersList %}
                        <li>{{ user[0].username }} - {{ user.distance | round(1, 'floor') }} kms</li>
                    {% endfor %}
                    {% else %}
                        <p>Aucun résultats trouvés pour "{{ keyword }}", {{ skill.skill }}</p>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}